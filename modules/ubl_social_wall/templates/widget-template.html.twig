<div class="grid">
    <div id="tab-now" class="grid-tab active">
        <div class="row">
            <div class="col-xs-12 col-sm-6">
                <div class="row">
                    {% for i in 0..0 %}
                        {% set post = wall.youtube[i] %}
                        {% if post is not empty %}
                            <article class="panel panel-xxl">
                                <div class="panel-inner panel-black panel-yt">
                                    <div class="pre-title">{{ "Vidéo à la une"|t }}</div>
                                    <iframe width="100%" height="auto" src="https://www.youtube.com/embed/{{ post.id }}"
                                            frameborder="0" allowfullscreen></iframe>
                                    <div class="date">{{ post.date|date("d M") }}</div>
                                </div>
                            </article>
                        {% endif %}
                    {% endfor %}
                </div>
            </div>
            <div class="col-xs-12 col-sm-6">
                <div class="row">
                    {% for i in 1..3 %}
                        {% set post = wall.youtube[i] %}
                        {% if post is not empty %}
                            <article class="panel">
                                <div class="panel-inner panel-black panel-yt">
                                    <div class="pre-title">{{ "Vidéo"|t }}</div>
                                    <iframe width="100%" height="auto" src="https://www.youtube.com/embed/{{ post.id }}"
                                            frameborder="0" allowfullscreen></iframe>
                                    <div class="date">{{ post.date|date("d M") }}</div>
                                </div>
                            </article>
                        {% endif %}
                    {% endfor %}
                    <article class="panel">
                        <div class="panel-inner panel-blue panel-center">
                            <a href="{{ wall.yt_chaine }}" target="_blank" title="{{ "Voir notre chaine Youtube"|t }}"><img {{ attributes.setAttribute('src', base_path ~ directory   ~ '/img/ico/wall_yt.png').setAttribute('alt',"Voir notre chaine Youtube"|t) }}></a>
                            <a href="{{ wall.yt_chaine }}" target="_blank" title="{{ "Voir notre chaine Youtube"|t }}">{{ "Voir la chaîne"|t }}</a>
                        </div>
                    </article>
                </div>
            </div>
        </div>
        <div class="row">
            <article class="panel">
                <div class="panel-inner panel-grey panel-center">
                    <a href="{{ wall.scoop_it }}" target="_blank" title="{{ "Voir notre scoop it"|t }}"><img {{ attributes.setAttribute('src', base_path ~ directory   ~ '/img/ico/wall_it.png').setAttribute('alt',"Voir notre scoop it"|t) }}></a>
                    <a href="{{ wall.scoop_it }}" target="_blank" title="{{ "Voir notre scoop it"|t }}">{{ "Voir le scoop it"|t }}</a>
                </div>
            </article>
            {% for post in wall.twitter %}
                <article class="panel">
                    <div class="panel-inner panel-blue">
                        <a href="{{ wall.twitter_statusurl }}{{ post.id_str }}" target="_blank">{{ post.text }}</a>

                        <div class="date">{{ post.created_at|date("d M") }}</div>
                    </div>
                </article>
            {% endfor %}
            <article class="panel">
                <div class="panel-inner panel-grey panel-center">
                    <a href="{{ wall.twitter_baseurl }}" target="_blank" title="{{ "Voir notre twitter"|t }}"><img {{ attributes.setAttribute('src', base_path ~ directory   ~ '/img/ico/wall_tw.png').setAttribute('alt',"Voir notre twitter"|t) }}></a>
                    <a href="{{ wall.twitter_baseurl }}" target="_blank" title="{{ "Voir notre twitter"|t }}">{{ "Voir le twitter"|t }}</a>
                </div>
            </article>
        </div>
    </div>
</div>